<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.tedxberkeley.www.tedxberkeley.Speakers.SpeakerFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/speaker_photo"
            android:layout_width="fill_parent"
            android:layout_height="160dp"
            android:contentDescription="@string/speaker_photo"/>

        <TextView
            android:id="@+id/speaker_name"
            android:layout_marginTop="@dimen/standard_space"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/content_margin"
            android:layout_marginStart="@dimen/content_margin"/>

        <TextView
            android:id="@+id/speaker_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/standard_space"
            android:layout_marginLeft="@dimen/content_margin"
            android:layout_marginStart="@dimen/content_margin"/>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
