<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.tedxberkeley.www.tedxberkeley.Speakers.SpeakerFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/speaker_photo"
                android:layout_marginTop="@dimen/standard_space"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:contentDescription="@string/speaker_photo"
                />
            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginRight="@dimen/standard_space"
                    android:layout_marginEnd="@dimen/standard_space"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/speaker_name"
                        android:layout_marginTop="@dimen/standard_space"
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/content_margin"
                        android:layout_marginStart="@dimen/content_margin"
                        android:textSize="@dimen/text_large"
                        android:textColor="@color/ted_red"
                        android:text="Swag Speaker Name"/>

                    <TextView
                        android:id="@+id/speaker_description"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/standard_space"
                        android:layout_marginLeft="@dimen/content_margin"
                        android:layout_marginStart="@dimen/content_margin"
                        android:text="@string/lorem_ispum"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
